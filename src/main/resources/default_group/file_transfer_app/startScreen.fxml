<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER"
      spacing="25.0"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="default_group.file_transfer_app.StartScreenController">

    <padding>
        <Insets topRightBottomLeft="50.0"/>
    </padding>

    <Label text="LAN File Transfer">
        <font>
            <Font size="24"/>
        </font>
    </Label>

    <Label text="By Jamal J. Alzek"/>

    <Label text="To get started, please choose to either send or receive file(s):"/>

    <Button text="Enter upload mode..." onAction="#onEnterSendModeButtonClick"/>

    <Button text="Enter download mode..." onAction="#onEnterReceiveModeButtonClick"/>

</VBox>